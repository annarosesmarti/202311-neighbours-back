{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "no-implicit-coercion": "off",
        "no-unused-vars": "error"
      }
    },
    {
      "files": ["**/model/*.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["Router"]
      }
    ]
  }
}
